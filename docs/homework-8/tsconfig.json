{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "outDir": "./dist",
    "lib": [
      "es2016"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": ["node"]
  },
  "exclude": [
    "../node_modules"
  ],
  "include": [
    "./*.ts",
    "./framework/*.ts",
    "../../node_modules/@types/node/index.d.ts"
  ]
}